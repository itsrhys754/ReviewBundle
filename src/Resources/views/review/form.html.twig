{% extends 'base.html.twig' %}

{% block title %}
    {% if editing %}
        Edit Review for {{ book.title }}
    {% else %}
        Add Review for {{ book.title }}
    {% endif %}
{% endblock %}

{% block body %}
    <div class="form-wrapper">
        <h1>
            {% if editing %}
                Edit Review for {{ book.title }}
            {% else %}
                Add Review for {{ book.title }}
            {% endif %}
        </h1>
        
        {{ form_start(form, {'attr': {'class': 'review-form'}}) }}
            <div class="form-group">
                {{ form_label(form.rating, 'Rating (0-10)') }}
                {{ form_widget(form.rating, {
                    'attr': {
                        'class': 'form-control',
                        'min': 0,
                        'max': 10
                    }
                }) }}
                {{ form_errors(form.rating) }}
            </div>

            <div class="form-group">
                {{ form_label(form.content, 'Your Review') }}
                {{ form_widget(form.content, {
                    'attr': {
                        'class': 'form-control',
                        'rows': 5
                    }
                }) }}
                {{ form_errors(form.content) }}
            </div>

            <button type="submit" class="btn btn-primary">
                {% if editing %}
                    Update Review
                {% else %}
                    Submit Review
                {% endif %}
            </button>
        {{ form_end(form) }}
    </div>
{% endblock %} 